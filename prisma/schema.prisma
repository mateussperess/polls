generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// model = tabela
model Poll {
  // @@map("poll") => para nomear a tabela conforme um nome espec√≠fico que eu queira
  id        String       @id @default(uuid())
  title     String
  createdAt DateTime     @default(now())
  updatedAt DateTime     @default(now())
  options   PollOption[]
  votes     Vote[]
}

// 1 Poll <> N Options

model PollOption {
  id     String @id @default(uuid())
  title  String
  pollId String
  // votesAmount Int

  poll  Poll   @relation(fields: [pollId], references: [id])
  votes Vote[]
}

// 

model Vote {
  id           Int      @id @default(autoincrement())
  sessionId    String
  pollId       String
  pollOptionId String
  createdAt    DateTime @default(now())

  pollOption PollOption @relation(fields: [pollOptionId], references: [id])
  poll       Poll       @relation(fields: [pollId], references: [id])

  @@unique([sessionId, pollId])
}
